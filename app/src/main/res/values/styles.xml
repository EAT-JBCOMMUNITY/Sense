<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your main app theme here. -->

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <!-- Customize your mainactivity theme and actionbar here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <!-- Overrite Customization for your main app theme attibutes for appbar here. -->

    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <!-- Overrite Customization for your main app theme attibutes for appbar's popups menu here. -->

    </style>


    <!-- LIGHT THEME -->
    <style name="AppThemeGo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="icon_color">@color/black</item>
        <item name="secondary_bg_color">@color/light</item>
        <item name="theme_icon">@drawable/ic_invert_theme</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/inverted</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <!-- INVERTED THEME -->
    <style name="AppThemeGoInverted" parent="Theme.MaterialComponents.NoActionBar">
        <item name="icon_color">@color/white</item>
        <item name="secondary_bg_color">@color/inverted</item>
        <item name="theme_icon">@drawable/ic_invert_theme_off</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/inverted</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert" />


</resources>
